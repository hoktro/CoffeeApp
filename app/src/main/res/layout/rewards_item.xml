<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="32dp"
    android:layout_marginEnd="32dp"
    android:background="@drawable/line"
    android:paddingTop="0dp"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/rewardsTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="24 June | 12:30 PM"
        android:textColor="#D8D8D8"
        android:textSize="10dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rewardsDescribe"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/rewardsDescribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        android:text="Americano"
        android:textColor="#324A59"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/rewardsPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ 12 Pts"
        android:textColor="#324A59"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rewardsDescribe"
        android:layout_marginTop="4dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>